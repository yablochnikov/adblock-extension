{
  "manifest_version": 2,
  "name": "Adblock Extension",
  "description": "Simple adblock extension",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "*://googleadservices.com/*",
    "*://.tpc.googlesyndication.com/*",
    "*://.safeframe.googlesyndication.com/*",
    "<all_urls>"
  ]
}
